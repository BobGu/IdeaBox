  <div class = "col-lg-12">
  <h1>Idea Box</h1>
    <form action='/' method='POST'>
      <h3>Your idea</h3>
      <p>Title:</p>
      <input type='text' placeholder='What is your idea??' class='form-control' name='idea[title]'/><br/>
      <p>Description:</p>
        <input type='text' placeholder='place your ideas here' class='form-control' name='idea[description]'></input><br/>
      <p>Tag:</p>
        <input type='text' placeholder='please enter your tags with spaces between :)' class='form-control' name='idea[tags]'/><br/>
        <input type='submit'/>
    </form>
  </div>
  <div class= 'col-lg-8'>
  <h3>Existing Ideas</h3>

  <ul>
    <% ideas.each_with_index do |idea| %>
      <li>
        <ul>
          <li>Idea : <%= idea.title %> (<%= idea.id %>)</li>
          <li>Description: <%= idea.description %></li>
          <li><%= idea.created_at %></li>
          <li>tags:

            <% idea.tags.each do |tag| %>
              <a href="/<%= tag %>/same_tags">
                <button type="button" class="btn btn-warning"><%= tag %></a></button>
            <% end %>
          </li>
          <li><button type='button' class='btn btn-danger'><a id='edit' href="/<%= idea.id %>/edit">Edit</a></button></li>
          <li><form action='/<%= idea.id %>/like' method='POST' style="display: inline">
            <input type='submit' value="Like"/>
          </form>
          </li>
          <li><form action="/<%= idea.id %>" method="POST">
           <input type="hidden" name="_method" value="DELETE">
           <input id='delete' type="submit" value="Delete"/>
          </form>
          </li>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
